section#about
  .container
    .row
      .col-sm-12

    .row
      .col-sm-12

        div role='tabpanel'
          ul.nav.nav-tabs role='tablist'
            li.active role='presentation'
              = link_to 'Latest', '#latest', aria: { controls: 'home' }, data: { toggle: 'tab' }, role: 'tab'

            li.active role='presentation'
              = link_to 'Trending', '#trending', aria: { controls: 'home' }, data: { toggle: 'tab' }, role: 'tab'

            li.active role='presentation'
              = link_to 'Foo', '#foo', aria: { controls: 'home' }, data: { toggle: 'tab' }, role: 'tab'

          div role='tabpanel'
            .tab-content
              .tab-pane.fade.in.active id="latest" role="tabpanel"
              .tab-pane.fade id="trending" role="tabpanel"
              .tab-pane.fade id="foo" role="tabpanel"

