section#contact
  .container
    .row
      .col-sm-12

    .row
      .col-sm-12


        = form_tag 'singup', method: 'post', class: 'form-inline', role: 'form'

          .form-group
            = label_tag :e, 'Email', class: 'sr-only'
            = text_field_tag :e, class: 'form-control'

          .form-group
            = label_tag :p, 'Password', class: 'sr-only'
            = text_field_tag :p, class: 'form-control'

          = submit_tag 'signup'

